{
  "name": "lang-ctrl",
  "version": "0.0.1",
  "description": "",
  "author": "@Cstrp",
  "private": false,
  "license": "MIT",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix --max-warnings=5",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "prepare": "husky install"
  },
  "dependencies": {
    "@langchain/community": "^0.3.50",
    "@langchain/core": "^0.3.70",
    "@langchain/google-genai": "^0.2.16",
    "@langchain/ollama": "^0.2.3",
    "@langchain/openai": "^0.6.7",
    "@mozilla/readability": "^0.6.0",
    "@nestjs/axios": "^4.0.1",
    "@nestjs/bullmq": "^11.0.3",
    "@nestjs/common": "^11.1.6",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.6",
    "@nestjs/event-emitter": "^3.0.1",
    "@nestjs/mapped-types": "^2.1.0",
    "@nestjs/platform-express": "^11.1.6",
    "archiver": "^7.0.1",
    "axios": "^1.11.0",
    "bullmq": "^5.58.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "dom-to-semantic-markdown": "^1.5.0",
    "fs-extra": "^11.3.1",
    "ioredis": "^5.7.0",
    "jsdom": "^26.1.0",
    "jsondom": "^0.4.1",
    "langchain": "^0.3.30",
    "module-alias": "^2.2.3",
    "nestjs-telegraf": "2.9.1",
    "playwright": "^1.54.2",
    "playwright-extra": "^4.3.6",
    "puppeteer-extra-plugin-stealth": "^2.11.2",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "socket.io": "^4.8.1",
    "telegraf": "4.16.3",
    "uuid": "^11.1.0",
    "zod": "^4.0.17",
    "zod-to-json-schema": "^3.24.6"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.33.0",
    "@nestjs/cli": "^11.0.10",
    "@nestjs/schematics": "^11.0.7",
    "@nestjs/testing": "^11.1.6",
    "@swc/cli": "^0.6.0",
    "@swc/core": "^1.13.3",
    "@types/archiver": "^6.0.3",
    "@types/express": "^5.0.3",
    "@types/jest": "^29.5.14",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^22.17.1",
    "@types/pino-multi-stream": "^5.1.6",
    "@types/supertest": "^6.0.3",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.3.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "pino": "^9.9.0",
    "pino-http": "^10.5.0",
    "pino-multi-stream": "^6.0.0",
    "pino-pretty": "^13.1.1",
    "prettier": "^3.6.2",
    "source-map-support": "^0.5.21",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.1",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.39.1"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^@/app/(.*)$": "<rootDir>/$1",
      "^@/utils/(.*)$": "<rootDir>/utils/$1",
      "^@/types/(.*)$": "<rootDir>/types/$1",
      "^@/types$": "<rootDir>/types/index.ts",
      "^@/config/(.*)$": "<rootDir>/config/$1",
      "^@/modules/(.*)$": "<rootDir>/modules/$1",
      "^@/schemas/(.*)$": "<rootDir>/schemas/$1",
      "^@/entities/(.*)$": "<rootDir>/entities/$1",
      "^@/entities$": "<rootDir>/entities/index.ts",
      "^@/constants/(.*)$": "<rootDir>/constants/$1",
      "^@/factories/(.*)$": "<rootDir>/factories/$1"
    }
  },
  "lint-staged": {
    "{src,apps,libs,test}/**/*.ts": [
      "eslint --fix"
    ]
  },
  "_moduleAliases": {
    "@": "dist",
    "@utils": "dist/utils",
    "@types": "dist/types",
    "@config": "dist/config",
    "@modules": "dist/modules",
    "@schemas": "dist/schemas",
    "@entities": "dist/entities",
    "@constants": "dist/constants",
    "@factories": "dist/factories"
  }
}
